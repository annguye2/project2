<!DOCTYPE html>
<html>
	<head>
		<% include ../partials/head %>
		<title>Add New Employee To A Task</title>
	</head>
	<body>
		<% include ../partials/header %>

		<div  id='container-1' class="container">
			<div class="row">
				<hr>
			</div>
		<div class="row">
			<h4> <%=task.name%> </h4>
		</div>
		<div class="row">
			<div id='col-1-show'class="col-xs-6">
				<label for="">Charge Number:</label>
			</div>
			<div id='col-2-show'class="col-xs-6">
				<p> <%=task.chargeNumber%> </p>
			</div>
		</div>
		<div class="row">
			<div id='col-1-show'class="col-xs-6">
				<label for="">Total Hours:</label>
			</div>
			<div id='col-2-show'class="col-xs-6">
				<p> <%=task.numHours%> </p>
			</div>
		</div>
		<div class="row">
			<div id='col-1-show'class="col-xs-6">
				<label for="">Number Hours Available:</label>
			</div>
			<div id='col-2-show'class="col-xs-6">
				<p> <%=task.numAvailableHours%> </p>
			</div>
		</div>
</div>
	 <div id='container-2' class="container">
			<h4> Employees: </h4>
			<ul>
				<% for(var i = 0; i < employees.length; i++){ %>

						<div class="row">
							<div id='col-1-show' class="col-xs-6">
									<a   href="/employees/<%=employees[i].id%>"><%=employees[i].name%></a>
							</div>
							<div id='col-2-show'class="col-xs-6">
								<a  id='button'class="btn btn-primary"  href="/tasks/<%=task.id%>/<%=employees[i].id%>/add">Select</a>
							</div>
						</div>
						<hr>
					<% } %>
				</ul>
</div>
  <% include ../partials/footer %>
	</body>
</html>
