<!DOCTYPE html>
<html>
<head>
   <% include ../partials/head %>
  <script type="text/javascript">
  function showDescription() {
    var name = document.getElementById("selectTask").value;
    name = 'Need question on how to show description here:  ' + name;
    document.getElementById("description").value=name;
  }

  </script>
  <meta charset="utf-8">
  <title>Available Tasks</title>
</head>
<body>
 <% include ./partials/header %>

  <section class='available-task'>
    <div class="container">
      <div class="row">
        <h4> Available Tasks </h4>
      </div>
      <div class="row">
        <ul>
          <% for(var i = 0; i < tasks.length; i++){ %>
            <li>
              <a  title="Description: <%=tasks[i].description%>"  href="/tasks/<%=tasks[i].id %>" > <%=tasks[i].name%></a>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
</section>

<section>
      <div class="container">
        <div class="row">
          <h4> Added  Tasks </h4>
        </div>

        <div class="row">
          <ul>
            <% for(var i = 0; i < assignedTasks.length; i++){ %>
              <div class="row" id='task-name'>
                <form action="/tasks/<%=assignedTasks[i]._id%>?_method=DELETE" method="post">
                  <li>
                    <a  title="Description: <%=assignedTasks[i].description%>"href="/tasks/<%=assignedTasks[i]._id%>"><%=assignedTasks[i].name%></a>
                    <input type="submit" name="delete" value="remove">
                    <a  title="Description: <%=assignedTasks[i].description%>"href="/tasks/<%=assignedTasks[i]._id%>/show">View details</a>
                    <ul>
                      <% for(var ii = 0; ii < assignedTasks[i]._employees.length; ii++){ %>
                        <li>
                          <a href="/employees/<%=assignedTasks[i]._employees[ii]._id%>"><%=assignedTasks[i]._employees[ii].name%> </a>
                        </li>
                        <% } %>
                      </ul>
                    </li>
                  </form>
                </div>
                <% } %>
              </ul>
            </div>

          </div>
        </section>
        <hr>
        <% include ./partials/footer %>
        </body>
        </html>
